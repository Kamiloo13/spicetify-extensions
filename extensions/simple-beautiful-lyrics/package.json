{
    "name": "simple-beautiful-lyrics",
    "version": "1.2.3",
    "private": true,
    "scripts": {
        "build": "spicetify-creator",
        "build-local": "spicetify-creator --out=dist --minify",
        "build-local-no-disable": "spicetify-creator --out=local --minify",
        "watch": "spicetify-creator --watch",
        "start": "spicetify config extensions simple-beautiful-lyrics.js & spicetify apply enable-devtools",
        "disable": "spicetify config extensions simple-beautiful-lyrics.js- & spicetify apply",
        "lint": "eslint .",
        "update-types": "curl -s -o ./src/types/spicetify.d.ts https://raw.githubusercontent.com/spicetify/spicetify-cli/master/globals.d.ts"
    },
    "license": "MIT",
    "devDependencies": {
        "@types/node": "^22.15.18",
        "@types/react": "^19.1.4",
        "@types/react-dom": "^19.1.5",
        "eslint": "^9.26.0",
        "spicetify-creator": "^1.0.17",
        "typescript-eslint": "^8.32.1"
    }
}
